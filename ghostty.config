# Ghostty Configuration
# Based on iTerm2 settings

# Font settings
font-family = HackGenConsoleNF
font-size = 14
font-feature = -dlig

# Window settings
window-width = 150
window-height = 48

# Theme - Dracula+
theme = Dracula+

# Background transparency and blur
background-opacity = 0.85
background-blur = true
background-blur-radius = 20

# Scrollback
scrollback-limit = 1000

# macOS specific settings
macos-option-as-alt = left
macos-hidden = always

# Cursor
cursor-style = block
cursor-style-blink = false

# Shell integration
shell-integration = zsh

# Window decoration
window-decoration = true
macos-titlebar-style = transparent

# Quick Terminal (Hotkey Window)
keybind = global:ctrl+shift+space=toggle_quick_terminal
quick-terminal-position = right
quick-terminal-size = 50%
quick-terminal-animation-duration = 0.05
quick-terminal-autohide = false
